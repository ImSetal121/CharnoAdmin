# ============================================
# PostgreSQL 数据库配置
# ============================================
POSTGRES_DB=meta-web-database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=Aa654321
POSTGRES_PORT=5432

# ============================================
# Redis 配置
# ============================================
REDIS_PORT=6379
# REDIS_PASSWORD=  # 如果 Redis 设置了密码，取消注释并填写

# ============================================
# 后端服务配置
# ============================================
BACKEND_PORT=8080
LOGGING_LEVEL=DEBUG

# ============================================
# 前端服务配置
# ============================================
FRONTEND_PORT=80

# ============================================
# 前端 API 基础 URL（构建时使用）
# ============================================
# 注意：在 Docker 环境中，前端通过 Nginx 代理访问后端
# 设置为空字符串使用相对路径，Nginx 会处理 /api 代理
# 开发环境可以设置为 http://localhost:8080
VITE_API_BASE_URL=

